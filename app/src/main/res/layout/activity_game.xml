<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    tools:context="edu.oakland.ultimatebarista.Game"
    android:background="@drawable/bg">

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/menuButton"
        android:src="@android:drawable/ic_dialog_dialer"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <ImageButton
        android:layout_width="40dp"
        android:layout_height="50dp"
        android:id="@+id/smallButton"
        android:background="@android:color/transparent"
        android:src="@drawable/small"
        android:scaleType="fitCenter"
        android:layout_above="@+id/medButton"
        android:layout_marginBottom="13dp"
        android:layout_marginLeft="35dp" />

    <ImageButton
        android:layout_width="40dp"
        android:layout_height="50dp"
        android:id="@+id/medButton"
        android:background="@android:color/transparent"
        android:scaleType="fitCenter"
        android:src="@drawable/medium"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="12dp" />

    <ImageButton
        android:layout_width="40dp"
        android:layout_height="50dp"
        android:id="@+id/largeButton"
        android:background="@android:color/transparent"
        android:layout_alignTop="@+id/medButton"
        android:layout_toRightOf="@+id/medButton"
        android:layout_toEndOf="@+id/medButton"
        android:scaleType="fitCenter"
        android:src="@drawable/large" />

    <ImageButton
        android:layout_width="40dp"
        android:layout_height="60dp"
        android:id="@+id/wholeButton"
        android:src="@drawable/whole"
        android:scaleType="fitXY"
        android:background="@android:color/transparent"
        android:layout_above="@+id/soyButton"
        android:layout_marginBottom="18dp"
        android:layout_marginLeft="0dp"
        android:layout_alignLeft="@+id/soyButton" />

    <ImageButton
        android:layout_width="40dp"
        android:layout_height="60dp"
        android:id="@+id/nonfatButton"
        android:background="@android:color/transparent"
        android:scaleType="fitXY"
        android:src="@drawable/nonfat"
        android:layout_above="@+id/whipButton"
        android:layout_toRightOf="@+id/wholeButton"
        android:layout_marginBottom="18dp"
        android:layout_marginLeft="10dp" />

    <ImageButton
        android:layout_width="40dp"
        android:layout_height="60dp"
        android:id="@+id/whipButton"
        android:background="@android:color/transparent"
        android:src="@drawable/whip"
        android:scaleType="fitCenter"
        android:layout_alignBottom="@+id/whitechocolateButton"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/soyButton" />

    <ImageButton
        android:layout_width="40dp"
        android:layout_height="60dp"
        android:id="@+id/soyButton"
        android:background="@android:color/transparent"
        android:src="@drawable/soy"
        android:scaleType="fitXY"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/largeButton"
        android:layout_marginLeft="20dp"
        android:layout_marginBottom="5dp" />

    <ImageButton
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:id="@+id/vanillaButton"
        android:background="@android:color/transparent"
        android:scaleType="fitCenter"
        android:src="@drawable/vanilla"
        android:layout_toRightOf="@+id/hazelnutButton"
        android:layout_toEndOf="@+id/hazelnutButton"
        android:layout_alignBottom="@+id/caramelButton"
        android:layout_marginLeft="10dp" />

    <ImageButton
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:id="@+id/caramelButton"
        android:background="@android:color/transparent"
        android:src="@drawable/caramel"
        android:scaleType="fitCenter"
        android:layout_above="@+id/whitechocolateButton"
        android:layout_marginLeft="70dp"
        android:layout_toRightOf="@+id/nonfatButton"
        android:layout_marginBottom="-5dp" />

    <ImageButton
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:id="@+id/hazelnutButton"
        android:background="@android:color/transparent"
        android:scaleType="fitCenter"
        android:src="@drawable/hazelnut"
        android:layout_alignBottom="@+id/caramelButton"
        android:layout_toRightOf="@+id/caramelButton"
        android:layout_toEndOf="@+id/caramelButton"
        android:layout_marginLeft="20dp" />

    <ImageButton
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:id="@+id/chocolateButton"
        android:background="@android:color/transparent"
        android:layout_marginTop="0dp"
        android:layout_alignTop="@+id/peppermintButton"
        android:layout_toRightOf="@+id/peppermintButton"
        android:scaleType="fitCenter"
        android:src="@drawable/chocolate"
        android:layout_alignBottom="@+id/peppermintButton"
        android:layout_marginLeft="20dp"
        android:layout_marginBottom="0dp" />

    <ImageButton
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:id="@+id/whitechocolateButton"
        android:background="@android:color/transparent"
        android:scaleType="fitCenter"
        android:src="@drawable/whitechoc"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="5dp"
        android:layout_toRightOf="@+id/whipButton"
        android:layout_marginLeft="25dp" />

    <ImageButton
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:id="@+id/peppermintButton"
        android:background="@android:color/transparent"
        android:layout_alignTop="@+id/whitechocolateButton"
        android:layout_toRightOf="@+id/whitechocolateButton"
        android:src="@drawable/peppermint"
        android:scaleType="fitCenter"
        android:layout_alignBottom="@+id/whitechocolateButton"
        android:layout_marginLeft="20dp"
        android:layout_marginBottom="0dp" />

    <ImageButton
        android:layout_width="80dp"
        android:layout_height="60dp"
        android:id="@+id/handButton"
        android:background="@android:color/transparent"
        android:layout_alignTop="@+id/menuButton"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="130dp"
        android:layout_marginRight="0dp"
        android:src="@drawable/hand"
        android:scaleType="fitXY" />

    <ImageButton
        android:layout_width="80dp"
        android:layout_height="90dp"
        android:id="@+id/trashButton"
        android:background="@android:color/transparent"
        android:layout_alignParentBottom="false"
        android:layout_alignParentRight="false"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/handButton"
        android:layout_marginTop="80dp"
        android:layout_marginRight="0dp"
        android:src="@drawable/trash"
        android:scaleType="fitXY" />

    <Chronometer
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/chronometer"
        android:textSize="20dp"
        android:layout_below="@+id/levelProgressText"
        android:textColor="@android:color/black"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Morning Rush"
        android:id="@+id/levelTitle"
        android:layout_alignParentTop="false"
        android:layout_alignParentLeft="false"
        android:layout_alignParentStart="false"
        android:layout_centerHorizontal="true"
        android:textColor="#ff000000" />

    <ProgressBar
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:id="@+id/levelProgressBar"
        android:max="100"
        android:progress="50"
        android:indeterminate="false"
        android:layout_below="@+id/levelTitle"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="1/3 orders"
        android:id="@+id/levelProgressText"
        android:textColor="@android:color/black"
        android:gravity="center"
        android:layout_below="@+id/levelProgressBar"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_width="125dp"
        android:layout_height="170dp"
        android:id="@+id/espressoMachine"
        android:src="@drawable/espresso"
        android:layout_above="@+id/caramelButton"
        android:layout_marginBottom="-30dp"
        android:layout_marginLeft="20dp"
        android:layout_alignLeft="@+id/caramelButton" />

    <Button
        android:layout_width="33dp"
        android:layout_height="33dp"
        android:id="@+id/steamButton"
        android:layout_alignLeft="@+id/espressoMachine"
        android:layout_alignTop="@+id/espressoMachine"
        android:layout_marginLeft="7dp"
        android:layout_marginTop="42dp"
        android:background="@drawable/steam" />

    <Button
        android:layout_width="33dp"
        android:layout_height="33dp"
        android:id="@+id/dcfButton"
        android:layout_marginLeft="41dp"
        android:layout_marginStart="41dp"
        android:layout_alignTop="@+id/steamButton"
        android:layout_alignLeft="@+id/steamButton"
        android:layout_alignStart="@+id/steamButton"
        android:background="@drawable/decaf" />

    <Button
        android:layout_width="33dp"
        android:layout_height="33dp"
        android:id="@+id/espButton"
        android:layout_alignTop="@+id/dcfButton"
        android:layout_toRightOf="@+id/dcfButton"
        android:layout_toEndOf="@+id/dcfButton"
        android:layout_marginLeft="3dp"
        android:background="@drawable/regular" />

</RelativeLayout>
