<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="edu.oakland.ultimatebarista.Game"
    android:background="@drawable/bg">

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/menuButton"
        android:src="@android:drawable/ic_dialog_dialer"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <ImageButton
        android:layout_width="40dp"
        android:layout_height="50dp"
        android:id="@+id/smallButton"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="#ff000000"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp" />

    <ImageButton
        android:layout_width="40dp"
        android:layout_height="50dp"
        android:id="@+id/medButton"
        android:background="#ff000000"
        android:layout_below="@+id/smallButton"
        android:layout_alignLeft="@+id/smallButton"
        android:layout_alignStart="@+id/smallButton"
        android:layout_marginTop="10dp" />

    <ImageButton
        android:layout_width="40dp"
        android:layout_height="50dp"
        android:id="@+id/largeButton"
        android:background="#ff000000"
        android:layout_below="@+id/medButton"
        android:layout_alignLeft="@+id/medButton"
        android:layout_alignStart="@+id/medButton"
        android:layout_marginTop="10dp" />

    <ImageButton
        android:layout_width="40dp"
        android:layout_height="50dp"
        android:id="@+id/wholeButton"
        android:background="#ff000000"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/smallButton"
        android:layout_toEndOf="@+id/smallButton"
        android:layout_marginLeft="50dp" />

    <ImageButton
        android:layout_width="40dp"
        android:layout_height="50dp"
        android:id="@+id/nonfatButton"
        android:background="#ff000000"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/wholeButton"
        android:layout_toEndOf="@+id/wholeButton"
        android:layout_marginLeft="15dp" />

    <ImageButton
        android:layout_width="40dp"
        android:layout_height="50dp"
        android:id="@+id/whipButton"
        android:background="#ff000000"
        android:layout_above="@+id/largeButton"
        android:layout_alignLeft="@+id/nonfatButton"
        android:layout_alignStart="@+id/nonfatButton" />

    <ImageButton
        android:layout_width="40dp"
        android:layout_height="50dp"
        android:id="@+id/soyButton"
        android:background="#ff000000"
        android:layout_alignTop="@+id/medButton"
        android:layout_toLeftOf="@+id/nonfatButton"
        android:layout_toStartOf="@+id/nonfatButton" />

    <ImageButton
        android:layout_width="40dp"
        android:layout_height="50dp"
        android:id="@+id/decafButton"
        android:background="#ff000000"
        android:layout_above="@+id/nonfatButton"
        android:layout_toRightOf="@+id/steamButton"
        android:layout_toEndOf="@+id/steamButton"
        android:layout_marginLeft="15dp" />

    <ImageButton
        android:layout_width="40dp"
        android:layout_height="50dp"
        android:id="@+id/steamButton"
        android:background="#ff000000"
        android:layout_above="@+id/nonfatButton"
        android:layout_toRightOf="@+id/nonfatButton"
        android:layout_toEndOf="@+id/nonfatButton"
        android:layout_marginLeft="50dp" />

    <ImageButton
        android:layout_width="40dp"
        android:layout_height="50dp"
        android:id="@+id/regularButton"
        android:background="#ff000000"
        android:layout_alignTop="@+id/decafButton"
        android:layout_toRightOf="@+id/decafButton"
        android:layout_toEndOf="@+id/decafButton"
        android:layout_marginLeft="15dp" />

    <ImageButton
        android:layout_width="40dp"
        android:layout_height="50dp"
        android:id="@+id/vanillaButton"
        android:background="#ff000000"
        android:layout_below="@+id/nonfatButton"
        android:layout_alignLeft="@+id/steamButton"
        android:layout_alignStart="@+id/steamButton" />

    <ImageButton
        android:layout_width="40dp"
        android:layout_height="50dp"
        android:id="@+id/caramelButton"
        android:background="#ff000000"
        android:layout_alignTop="@+id/vanillaButton"
        android:layout_alignLeft="@+id/decafButton"
        android:layout_alignStart="@+id/decafButton" />

    <ImageButton
        android:layout_width="40dp"
        android:layout_height="50dp"
        android:id="@+id/hazelnutButton"
        android:background="#ff000000"
        android:layout_alignTop="@+id/caramelButton"
        android:layout_toRightOf="@+id/caramelButton"
        android:layout_toEndOf="@+id/caramelButton"
        android:layout_marginLeft="15dp" />

    <ImageButton
        android:layout_width="40dp"
        android:layout_height="50dp"
        android:id="@+id/chocolateButton"
        android:background="#ff000000"
        android:layout_alignTop="@+id/largeButton"
        android:layout_alignLeft="@+id/vanillaButton"
        android:layout_alignStart="@+id/vanillaButton" />

    <ImageButton
        android:layout_width="40dp"
        android:layout_height="50dp"
        android:id="@+id/whitechocolateButton"
        android:background="#ff000000"
        android:layout_alignTop="@+id/peppermintButton"
        android:layout_alignLeft="@+id/caramelButton"
        android:layout_alignStart="@+id/caramelButton" />

    <ImageButton
        android:layout_width="40dp"
        android:layout_height="50dp"
        android:id="@+id/peppermintButton"
        android:background="#ff000000"
        android:layout_alignTop="@+id/chocolateButton"
        android:layout_alignLeft="@+id/hazelnutButton"
        android:layout_alignStart="@+id/hazelnutButton" />

    <ImageButton
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:id="@+id/handButton"
        android:background="#ff000000"
        android:layout_alignTop="@+id/nonfatButton"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <ImageButton
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:id="@+id/trashButton"
        android:background="#ff000000"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <RelativeLayout
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:background="#ff9000ff"
        android:padding="10dp"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/smallButton"
        android:layout_alignStart="@+id/smallButton"
        android:layout_above="@+id/smallButton">

        <ListView
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:id="@+id/ordersList"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />
    </RelativeLayout>

    <Chronometer
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/chronometer"
        android:textSize="20dp"
        android:layout_alignBottom="@+id/levelTitle"
        android:layout_alignRight="@+id/regularButton"
        android:layout_alignEnd="@+id/regularButton" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Morning Rush"
        android:id="@+id/levelTitle"
        android:layout_centerHorizontal="true" />

    <ProgressBar
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/levelProgressBar"
        android:layout_below="@+id/levelTitle"
        android:layout_alignLeft="@+id/levelTitle"
        android:layout_alignStart="@+id/levelTitle"
        android:max="100"
        android:progress="50"
        android:indeterminate="false"
        android:layout_marginTop="5dp"
        android:layout_alignRight="@+id/chronometer"
        android:layout_alignEnd="@+id/chronometer" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="1/3 orders"
        android:id="@+id/levelProgressText"
        android:textColor="#ffffffff"
        android:gravity="center"
        android:layout_below="@+id/levelProgressBar"
        android:layout_alignLeft="@+id/levelProgressBar"
        android:layout_alignStart="@+id/levelProgressBar"
        android:layout_alignRight="@+id/levelProgressBar"
        android:layout_alignEnd="@+id/levelProgressBar" />

</RelativeLayout>
